<div style="width: 90%; margin:auto">
    <ol class="post-list">
        <div class="post" style="border:solid;">
            <div class="card col-12">
                <div class="card-header" style="background-color:rgb(40, 41, 33)" ;>
                    <p class="text-left" style="font-size:20px; color: white">{{post.title}}</p>
                    <p class="text-right" style="font-size: 15px; color: white">Posted by {{post.user.username}} on
                        {{ format_date post.created_at}}</p>
                </div>
                <div class="card-body">
                    <p>{{post.content}}</p>
                    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
                    {{#if loggedIn}}
                    <form class="comment-form">
                        <div>
                            <textarea name="comment-body"></textarea>
                        </div>

                        <div>
                            <button type="submit">add comment</button>
                        </div>
                    </form>
                    {{/if}}
                </div>
            </div>
        </div>
    </ol>
</div>

<div style="width: 90%; margin:auto">
    <div class="comments">
        {{#each post.comments}}
        <div class="card col-12">
            <div class="card-body">
                <p>{{comment_text}}</p>
            </div>
            <div class="meta">
                {{user.username}} on {{created_at}}
            </div>
        </div>
        {{/each}}
    </div>
</div>



{{#if loggedIn}}
<script src="../js/comment.js"></script>
{{/if}}