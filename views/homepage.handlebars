<ol class="post-list">
    {{#each posts}}
    <div class="post">
        <div class="card col-12" style="width: 90%;">
            <div class="card-header" style="background-color:rgb(40, 41, 33)" ;>
                <div class="text-left" style="font-size:20px; color: white">{{title}}</div>
                <div class="text-right" style="font-size: 15px; color: white"> Posted by {{user.username}} on
                    {{created_at}}</div>
            </div>
            <div class="card-body" style="background-color: rgb(111, 131, 124) ;">
                <p>{{content}}</p>
            </div>

        </div>
    </div>
    {{/each}}
</ol>